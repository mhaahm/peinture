{% extends "base.html.twig" %}

{% block body %}
    <section id="blog" class="blog" style="margin-top: 80px;margin-left: 50px;width: 137%;">
        <div class="row">

            <div class="col-lg-8 entries">
                <article class="entry entry-single">
                    <h2 class="entry-title">
                        {{ blogPost.titre }}
                    </h2>
                    <div class="entry-content">
                        <p>
                            {{ blogPost.contenu }}
                        </p>
                    </div>
                </article>
            </div>
        </div>
    </section>
{% endblock %}