{% extends 'base.html.twig' %}

{% block title %}Hello ContacteController!{% endblock %}

{% block body %}
<section id="blog" class="blog" style="margin-top: 80px;margin-left: 50px;width: 80%;">
    <div class="row">
    {% for message in app.flashes('error') %}
        <div class="alert alert-light-danger">
            <p>{{ message }}</p>
        </div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            <p>{{ message }}</p>
        </div>
    {% endfor %}
    <div class="container aos-init aos-animate">

        <div class="reply-form">
            <h4>Contact</h4>
            {{ form_start(formContact) }}
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label class="form-label">Nom du contact</label>
                        {{ form_widget(formContact.nom) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label class="form-label">Email</label>
                        {{ form_widget(formContact.email) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 form-group">
                        <label class="form-label">Message</label>
                        {{ form_widget(formContact.message) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 form-group">
                        {{ form_widget(formContact.Envoyer) }}
                    </div>
                </div>
              {{ form_end(formContact) }}

        </div>
    </div>
    </div>
</section>
{% endblock %}
